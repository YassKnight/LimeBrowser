<?xml version="1.0" encoding="utf-8"?>
<com.snxun.browser.module.stackview.widget.LimeTabCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ucTabCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/rlPageHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54dp"
        android:background="@color/windowLight">

        <ImageView
            android:id="@+id/ivWebsiteIcon"
            android:layout_width="@dimen/dimen_44dp"
            android:layout_height="@dimen/dimen_44dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/tvPagerUC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivWebsiteIcon"
            android:singleLine="true"
            android:text="LimeBrowser"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivPageClose"
            android:layout_width="@dimen/dimen_44dp"
            android:layout_height="@dimen/dimen_44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_12dp"
            android:src="@drawable/ic_tab_delete" />
    </RelativeLayout>
</com.snxun.browser.module.stackview.widget.LimeTabCard>