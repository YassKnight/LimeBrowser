<?xml version="1.0" encoding="utf-8"?>
<com.snxun.browser.module.bottomview.LimeBottomView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_back_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_back_img"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_14dp"
                android:src="@drawable/ic_back_dis" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_forward_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_forward_img"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_14dp"
                android:src="@drawable/ic_forward_dis" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_home_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_14dp"
                android:src="@drawable/ic_home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_multi_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_14dp"
                    android:src="@drawable/ic_window" />

                <TextView
                    android:id="@+id/bottom_multi_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_6b6b6b" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_exit_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_14dp"
                android:src="@drawable/ic_exit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_refresh_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_14dp"
                android:src="@drawable/ic_refresh" />
        </LinearLayout>

    </LinearLayout>

</com.snxun.browser.module.bottomview.LimeBottomView>