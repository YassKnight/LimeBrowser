<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:id="@+id/root_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_content_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/limeBrowser_title_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/browser_icon" />

            <TextView
                android:id="@+id/limeBrowser_title_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/item_app_name" />
        </LinearLayout>

        <include
            android:id="@+id/limeBrowser_searchbar_layout"
            layout="@layout/layout_searchbar"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/limeBrowser_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/root_title_layout"
        android:layout_marginBottom="@dimen/dimen_48dp"
        android:orientation="vertical"
        android:paddingTop="10dp">


    </LinearLayout>


</RelativeLayout>